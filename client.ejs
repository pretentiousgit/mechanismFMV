        <source src="<%- name %>.webm" type="video/webm" />
        Your browser does not support the video tag.
        </video>
        <br />
      <%
      	}
      	else{
      	%>
      	<img class="visible" ext="<%- ex %>" id="<%- gamedata[0].urls.index %>" src="<%- gamedata[0].urls.client %>" />
     <%
 	}
	
	for(var i=1;i<datasize;i++){ 
		var str = gamedata[i].urls.client;
